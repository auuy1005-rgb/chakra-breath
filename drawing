  <script>
    // ---------------------------
    // aï¼šä¸»é«”è³‡æ–™åº«ï¼ˆobjectsï¼‰
    // ---------------------------
    const dbA = [
      { id: "apple", text: "ä¸€é¡†è˜‹æœ", tag: "fruit" },
      { id: "potato", text: "ä¸€é¡†é¦¬éˆ´è–¯", tag: "veggie" },
      { id: "cat", text: "ä¸€éš»å°è²“", tag: "animal" },
      { id: "octopus", text: "ä¸€éš»ç« é­š", tag: "animal" },
      { id: "alarm_clock", text: "ä¸€å€‹é¬§é˜", tag: "object" }
      // ä¹‹å¾Œåœ¨é€™è£¡ç¹¼çºŒåŠ å°±å¥½
    ];

    // ---------------------------
    // bï¼šè§’è‰²ç‰¹æ€§è³‡æ–™åº«ï¼ˆtraitsï¼‰
    // ---------------------------
    const dbB = [
      { id: "phone_addict", text: "æ„›æ»‘æ‰‹æ©Ÿçš„" },
      { id: "social_tired", text: "ç¤¾äº¤ç–²å‹çš„" },
      { id: "overthinking", text: "éåº¦æ€è€ƒçš„" },
      { id: "sleepy", text: "ç¡ä¸é£½çš„" },
      { id: "procrastinating", text: "æ‹–å»¶ç—‡çˆ†ç™¼çš„" }
    ];

    // ---------------------------
    // cï¼šæƒ…ç·’ï¼æ¨¡å¼è³‡æ–™åº«ï¼ˆmodesï¼‰
    // ---------------------------
    const dbC = [
      { id: "low_balance", text: "å­˜æ¬¾è¦‹åº•æ¨¡å¼" },
      { id: "low_energy", text: "èƒ½é‡å‰© 3% æ¨¡å¼" },
      { id: "repair_mode", text: "å¿ƒæƒ…ç¶­ä¿®æ¨¡å¼" },
      { id: "fake_ok", text: "å‡è£æ­£å¸¸æ¨¡å¼" },
      { id: "no_social", text: "ä»Šå¤©ä¸ç¤¾äº¤æ¨¡å¼" }
    ];

    // ---------------------------
    // dï¼šå¥å‹æ¨¡æ¿è³‡æ–™åº«ï¼ˆC1ï½C8ï¼‰
    // ä½¿ç”¨ {a} / {b} / {c} å ä½ç¬¦
    // ---------------------------
    const dbD = [
      // C1 è§’è‰²ï¼‹å‹•ä½œï¼‹å¾®å ´æ™¯
      {
        id: "c1",
        template:
          "{a}{b}ï¼Œæ­£è™•æ–¼{c}ï¼Œæ­£åœ¨è§’è½å‡è£æ²’äº‹ï¼Œæ—é‚Šå †è‘—ä¸€å †è¦è™•ç†çš„æ±è¥¿ã€‚"
      },
      // C3 ç‹€æ…‹æ¯”å–»
      {
        id: "c3",
        template:
          "{a}{b}ï¼Œé€²å…¥{c}ï¼Œåƒæ²’æ’å¥½å……é›»ç·šçš„æ‰‹æ©Ÿä¸€æ¨£å¡åœ¨ä»Šå¤©ã€‚"
      },
      // C5 å¾®è§€è¦–è§’
      {
        id: "c5",
        template:
          "{a}{b}ï¼Œè¡¨é¢çœ‹èµ·ä¾†å¾ˆå¹³éœï¼Œé è¿‘çœ‹æœƒç™¼ç¾å…¨èº«éƒ½è²¼æ»¿ã€Œ{c}ã€çš„å°å­—ã€‚"
      },
      // C6 åå·®ä¸¦å­˜
      {
        id: "c6",
        template:
          "{a}{b}ï¼Œå¤–è¡¨çœ‹èµ·ä¾†å¾ˆå†·éœï¼Œä½†å…§å¿ƒå®Œå…¨æ˜¯{c}ã€‚"
      }
    ];

    // ---------------------------
    // æŠ½å¡èˆ‡çµ„åˆé‚è¼¯
    // ---------------------------
    function pickRandom(list) {
      return list[Math.floor(Math.random() * list.length)];
    }

    function buildPrompt() {
      const a = pickRandom(dbA);
      const b = pickRandom(dbB);
      const c = pickRandom(dbC);
      const d = pickRandom(dbD);

      const sentence = d.template
        .replace("{a}", a.text)
        .replace("{b}", b.text)
        .replace("{c}", c.text);

      return { a, b, c, d, sentence };
    }

    // ---------------------------
    // DOM ç¶å®š & äº‹ä»¶
    // ---------------------------
    const valueA = document.getElementById("valueA");
    const valueB = document.getElementById("valueB");
    const valueC = document.getElementById("valueC");
    const idA = document.getElementById("idA");
    const idB = document.getElementById("idB");
    const idC = document.getElementById("idC");
    const sentenceText = document.getElementById("sentenceText");
    const randomBtn = document.getElementById("randomBtn");

    const unsplashImg = document.getElementById("unsplashImg");
    const refreshUnsplashBtn = document.getElementById("refreshUnsplashBtn");

    randomBtn.addEventListener("click", () => {
      const result = buildPrompt();

      valueA.textContent = result.a.text;
      valueB.textContent = result.b.text;
      valueC.textContent = result.c.text;

      idA.textContent = `id: ${result.a.id}ï¼ˆtag: ${result.a.tag}ï¼‰`;
      idB.textContent = `id: ${result.b.id}`;
      idC.textContent = `id: ${result.c.id}ï½œå¥å‹ï¼š${result.d.id}`;

      sentenceText.textContent = result.sentence;

      // é€™é‚Šä¹‹å¾Œå¯ä»¥ä¾ç…§ tag æ›´æ–° Pinterest / Unsplash é—œéµå­—
      // ç›®å‰å…ˆä¸å‹•ï¼Œä¿ç•™çµ¦æœªä¾†å·¥ç¨‹æ—ºé”å‡ç´š ğŸ˜
    });

    // Unsplash éš¨æ©Ÿåœ–ï¼ˆç°¡å–®ç‰ˆï¼‰
    function refreshUnsplash() {
      const url =
        "https://source.unsplash.com/800x600/?abstract,emotion,texture&ts=" +
        Date.now(); // åŠ æ™‚é–“é¿å…å¿«å–
      unsplashImg.src = url;
    }

    refreshUnsplashBtn.addEventListener("click", refreshUnsplash);
  </script>
